extends ../base
block title
	| personal-area page
block main
	section.own_partner_cabinet
		.container
			.title_wrap_h2
				h2 Личный кабинет партнера
			.input_button
				label Ваша партнерская ссылка:
				input(type='text' title='Имя занято другим юзером' class='switch' value="https://stockaccs.com/?parther=XXXXX" readonly)
				button.btn-form.btn-switch ИЗМЕНИТЬ
	.container
		hr
	section.menu_profile
		.container
			.wrap_menu_profile
				.menu
					ul.menu_list
						li.active_item
							a(href='#') Мой профиль
						li
							a(href='#') Статистика
						li
							a(href='#') Баланс
						li
							a(href='#') Выплаты
						li
							a(href='#') Выход
				.profile
					//сменная часть
					.profile_header Профиль
					.profile_body
						form
							input(type='hidden')
							.alert-danger.name-feedbacks
								.feedbacks-name
							.form_user_email
								.form-group.required.has-error
									.form_group_wrap
										label.control-label E-mail:
										input(type='e-mail' value='xtz4ever@yandex.ua').input.input_big
									.help-block
							.alert-danger.email-feedbacks
								.feedbacks-email
							.form_login
								.form-group.required.has-error
									.form_group_wrap
										label.control-label Логин:
										input(type='text' value='asdasd').input.input_big
									.help-block
							.alert-danger.feedback-feedbacks
								.feedbacks-feedback
							.form_user_password
								.form-group.required.has-error
									.form_group_wrap
										label.control-label Пароль:
										input(type='password').input.input_big
									.help-block
							.form_user_password
								.form-group.required.has-error
									.form_group_wrap
										label.control-label Повторите пароль:
										input(type='password').input.input_big
									.help-block
							.form_user_el_wallet
								.form-group.required.has-error
									.form_group_wrap
										label.control-label Электронный кошелек:
										.select
											.slct_arrow
												i.fa.fa-angle-down
											a(href="#" class="slct") WebMoney
											ul.drop
												li WebMoney
												li Yandex-деньги
												li Scrill
										button.btn_plus
											input(type="hidden" name="services")
							.form_user_add_new_el_wallet
								.form-group.required.has-error
									.form_group_wrap
										label.control-label Номер Кошелька:
										input(type='text' title='Поле не должно быть пустым').input.input_big.input_plus.add_new_wal
										button.btn_plus.minus
									.help-block
							.form_user_el_wallet
								.form-group.required.has-error
									.form_group_wrap
										label.control-label Yandex-деньги
										input(type='text').input.input_big.input_plus
										button.btn_plus.minus
									.help-block
							.form-group
								button(type='submit').btn-form.wal_check сохранить
							.contacts-validate
